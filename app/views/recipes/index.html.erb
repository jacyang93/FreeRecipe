

<h1>Recipes</h1>

<%= form_tag recipes_path, :method => 'get', remote: true do %>
  <p>
    <input type="text_field" placeholder="Search For Recipes Title" name="search">
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>


<div>
  <table>
    <thead>
      <tr>
        <th>title</th>
        <th>desciption</th>
        <th>Picture</th>
        <th>Created By</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id='all_items'>
      <%= render partial: 'search_results', locals: {recipes: @recipes} %>
    </tbody>
  </table>

</div>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
