
<% if recipes.present? %>
<% recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.title %></td>
      <td><%= recipe.description %></td>
      <% if recipe.pictures? %>
      <td><%= image_tag recipe.pictures.first.thumb %>
        <% else %>
        <td> no picture </td>
        <% end %>
        <td><%= link_to 'Show', recipe %></td>
        <% if current_user.id == recipe.user.id || current_user.access_level = "admin"%>

      <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
      <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  <% end %>
  <% else %>
  <p> no result found <p>
<% end %>
