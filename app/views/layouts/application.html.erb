<!DOCTYPE html>
<html>
  <head>
    <title>FreeRecipe</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>

      Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' %> | <%= link_to "Edit your profile", edit_user_path(current_user.id)%> | <%= link_to "Show Recipe List", recipes_path %>
      <div>
      <% flash.each do |message_type, message| %>
      <p><%= message %></p>
      <% end %>
    </div>
    <% else %>
      <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %> | <%= link_to "Sign in with Facebook", "/auth/facebook" %>
    <% end %>
    <%= yield %>
  </body>
</html>
